@model IEnumerable<NewsSite.Models.Article>

@{
    ViewBag.PageTitle = ViewData["PageTitle"];
    ViewData["Title"] = "Home Page";
    var theme = Context.Request.Cookies["UserPreference"] ?? "light";
    var title = ViewBag.PageTitle;
}

<h1>@ViewBag.PageTitle</h1>
<div class="homepage-grid-container">
    @foreach(var @article in Model)
    {
        <div class="homepage-grid-item">
            @if (article.Image != null)
            {
                <img src="data:image;base64,@(Convert.ToBase64String(article.Image))" width="100" />
            }
            <label>@article.Title</label>
            <label>@article.User</label>
            <p>@article.ArticleCategories</p>
            <p>@article.PublishedDate</p>
        </div>
    }
</div>