@model NewsSite.Models.Articles.CreateArticleViewModel

<h2>Създаване на новина</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Title">Заглавие</label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Content">Съдържание</label>
        <input asp-for="Content" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserId">Автор</label>
        <select asp-for="UserId" asp-items="ViewBag.UserId" class="form-control">
            <option value="">Моля изберете автор</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="CategoryIds">Категория</label><br />
        <label>
            <input asp-for="CategoryIds" type="checkbox" value="Bulgaria" name="chosenCategory"/>България<br/>
            <input asp-for="CategoryIds" type="checkbox" value="World" name="chosenCategory" />Светът<br />
            <input asp-for="CategoryIds" type="checkbox" value="Politics" name="chosenCategory" />Политика<br />
            <input asp-for="CategoryIds" type="checkbox" value="Economy" name="chosenCategory" />Икономика<br />
            <input asp-for="CategoryIds" type="checkbox" value="Sports" name="chosenCategory" />Спорт<br />
        </label>
    </div>
    
    <div class="form-group">
        <label asp-for="ImageFile">Качи снимка</label>
        <input type="file" asp-for="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
</form>
