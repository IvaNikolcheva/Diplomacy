@model NewsSite.Models.Article

<h2>@Model.Title</h2>

<div>
    <fieldset class="box-shadow">
        @if (Model.Image != null)
        {
            <img src="data:image;base64,@(Convert.ToBase64String(@Model.Image))" width="100" />
        }
        <p class="align-items-lg-center">@Model.Content</p>

        <label class="align-items-md-end">@Model.User.FirstName @Model.User.FamilyName</label>

        <label class="align-items-md-center">@Model.Category.CategoryName</label>
    </fieldset>
</div>
<a asp-action="Index" class="btn btn-primary">Back to list</a>
