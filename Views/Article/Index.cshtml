@model IEnumerable<NewsSite.Models.Article>

<h2>Моите новини</h2>

<a asp-action="Create" class="btn btn-primary">Добави новина</a>
<div>
    <table>
        <thead>
            <tr>
                <th>Снимка</th>
                <th>Заглавие</th>
                <th>Съдържание</th>
                <td>Категории</td>
                <td>Автор</td>
                <th>Действие</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var @article in Model)
            {
                <tr>
                    <td>
                        @if (@article.Image != null)
                        {
                            <img src="data:image;base64,@(Convert.ToBase64String(@article.Image))" width="100" />
                        }
                    </td>
                    <td>@article.Title</td>
                    <td>@article.Content</td>
                    <td>@article.Category.CategoryName</td>
                    <td>@article.User.FirstName @article.User.FamilyName</td>
                    <td>
                        @if (User.IsInRole("Worker") || User.IsInRole("Admin"))
                        {
                            <form asp-action="Edit" method="get" asp-route-id="@article.ArticleId">
                                <button type="submit" class="btn btn-secondary">Редактирай</button>
                            </form>
                        <form asp-action="Delete" asp-route-id="@article.ArticleId">
                            <button type="submit" class="btn btn-danger">Изтрий</button>
                        </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>