@model IEnumerable<NewsSite.Models.Article>

<h2>Моите новини</h2>

<a asp-action="Create" class="btn btn-primary">Добави новина</a>
<div>
    <table style="border:solid black 4px">
        <thead style ="border:solid black 2px">
            <tr style="border:solid black 2px">
                <th style="border:solid black 2px">Снимка</th>
                <th style="border:solid black 2px">Заглавие</th>
                <th style="border:solid black 2px">Съдържание</th>
                <th style="border:solid black 2px">Категории</th>
                <th style="border:solid black 2px">Автор</th>
                <th style="border:solid black 2px">Действия</th>
            </tr>
        </thead>
        <tbody style="border:solid black 4px">
            @foreach (var @article in Model)
            {
                <tr style="border:solid black 2px">
                    <td style="border:solid black 2px">
                        @if (@article.Image != null)
                        {
                            <img src="data:image;base64,@(Convert.ToBase64String(@article.Image))" width="100" />
                        }
                    </td>
                    <td style="border:solid black 2px">@article.Title</td>
                    <td style="border:solid black 2px">@article.Content</td>
                    <td style="border:solid black 2px">@article.Category.CategoryName</td>
                    <td style="border:solid black 2px">@article.User.FirstName @article.User.FamilyName</td>
                    <td style="border:solid black 2px">
                        @if (User.IsInRole("Worker") || User.IsInRole("Admin"))
                        {
                            <form asp-action="Edit" method="get" asp-route-id="@article.ArticleId">
                                <button type="submit" class="btn btn-secondary">Редактирай</button>
                            </form>
                            <form asp-action="Delete" method="get" asp-route-id="@article.ArticleId">
                                <button type="submit" class="btn btn-danger">Изтрий</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>